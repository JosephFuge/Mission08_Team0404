@model UserTask

<form method="post">

    <input type="hidden" asp-for="TaskId" />

    <label asp-for="TaskName">Task Name: </label>
    <input asp-for="TaskName" />
    <br />
    <label asp-for="DueDate">Due Date: </label>
    <input asp-for="DueDate" />
    <br />
    <label asp-for="Quadrant">Quadrant: </label>
    <input asp-for="Quadrant" />
    <br />
    <label asp-for="CategoryId">Category: </label>
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories) //Assign correct catgory to the category id for each row
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Completed">Completed: </label>
    <select asp-for="Completed">
        <option value="0">False</option>
        <option value="1">True</option>
    </select>
    <br />

    <button type="submit">Submit</button>

    <div asp-validation-summary="All"></div>

</form>
